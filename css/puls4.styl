gris_oscuro = #444
azul = #22bce0
naranja = #dd4f24
gris_texto = #7a7a7a
body
	background #e8e8e8
	color gris_oscuro
	font-family arial
	font-size 16px

header
	position relative
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	background gris_oscuro
	color white
	padding 0.5em
	overflow hidden //esto siver para que no desborde
	z-index 1 /*para que se nos vea la box-shadow*/

	.logo
		border-right 1px solid azul
		float left
		width 60px
		
		img
			width 52px
	.titular
		margin 0 60px 0 70px
		.filtro
			color azul
			font-weight bold
			font-style italic
			font-size 14px
			text-decoration none
		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0
		.publicar
			background naranja
			color white
			float right
			margin -2px 1em 0 0
			padding 0.1em 0.5em
			text-decoration none
			text-shadow 1px 1px 0px black
				
		
	.usuario
		position absolute
		right 10px
		top 10px
		
		.avatar
			position relative
			margin  0 1.1em 0 0 
			z-index 2
			
			img
				width 50px
				border-radius 50%
		.flechita
			background naranja
			color white
			display block
			padding 2px
			position absolute
			right -18px
			top 15px
			text-align right
			text-decoration none
			width 65%
			z-index -1
nav
	background azul
	border-left 15px solid white
	position relative
	
	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content "" 
		/* es obligatorio poner content a los 
		//befores y after para que funcionen*/
		position absolute
		top 0
		left 0px
	.menu
		height 40px /* altura de la caja*/
		line-height 40px /* altura de la linea*/
		margin 0
		padding 0
		overflow-x auto
		white-space nowrap
		li
			display inline-block
			a 
				color white
				display block
				margin 0 0.5em
				padding 0 0.2em
				text-decoration none
				&:after
					content " - "
.posts
	padding 0.5em
	.post
		background white
		color gris_texto
		box-shadow 2px 2px 10px rgba(black 0.5)				






.left
	float left
.right
	float right

			