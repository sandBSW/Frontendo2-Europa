gris_oscuro = #444
azul = #22bce0
naranja = #dd4f24
gris_texto = #7a7a7a

@font-face 
	font-family: 'iconitos';
	src:url('../fonts/icomoon.eot?p6dt8b');
	src:url('../fonts/icomoon.eot?p6dt8b#iefix') format('embedded-opentype'),
		url('../fonts/icomoon.ttf?p6dt8b') format('truetype'),
		url('../fonts/icomoon.woff?p6dt8b') format('woff'),
		url('../fonts/icomoon.svg?p6dt8b#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;


body
	background #e8e8e8
	color gris_oscuro
	font-family arial
	font-size 16px

footer 
	background naranja
	color rgba(white,0.5)
	padding 1em
	text-align center
	width 100%
	
	h3
		font-size 14px
		font-weight normal
		
		strong
			display block
		.mejor
			&:before
			&:after
				content " - "

header
	position relative
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	background gris_oscuro
	color white
	padding 0.5em
	overflow hidden //esto siver para que no desborde
	z-index 1 /*para que se nos vea la box-shadow*/

	.logo
		border-right 1px solid azul
		float left
		width 60px
		
		img
			width 52px
	.titular
		margin 0 60px 0 70px
		.filtro
			color azul
			font-weight bold
			font-style italic
			font-size 14px
			text-decoration none
		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0
		.publicar
			background naranja
			color white
			float right
			margin -2px 1em 0 0
			padding 0.1em 0.5em
			text-decoration none
			text-shadow 1px 1px 0px black
			&:before
				display inline-block
				font-family: 'iconitos';
				content "\e908"
				margin 0 0.3em 0 0
				
		
	.usuario
		position absolute
		right 10px
		top 10px
		
		.avatar
			position relative
			margin  0 1.3em 0 0 
			z-index 2
			
			img
				width 50px
				border-radius 50%
		.flechita
			background naranja
			color white
			display block
			padding 2px
			position absolute
			right -25px
			top 15px
			text-align right
			text-decoration none
			width 100%
			z-index -1
			&:after
				display inline-block
				font-family "iconitos"	
				content "\ea41"
				margin 0 0.2em 0 0
				text-shadow 1px 1px 0px black

nav				
	background azul
	border-left 15px solid white
	position relative
	
	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content "" 
		/* es obligatorio poner content a los 
		//befores y after para que funcionen*/
		position absolute
		top 0
		left 0px
	.menu
		height 40px /* altura de la caja*/
		line-height 40px /* altura de la linea*/
		margin 0
		padding 0
		overflow-x auto
		white-space nowrap
		li
			display inline-block
			a 
				color white
				display block
				margin 0 0.5em
				padding 0 0.2em
				text-decoration none
				&:after
					content " - "
.posts

	padding 0.5em
	
	.post
		background white
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black 0.5)				
		color gris_texto
		margin-bottom 1em
		
		.acciones
			border-top 3px solid azul
			padding 0.5em 
			overflow hidden
			
			.datos
				float right
				
				.comentarios
					background gris_oscuro
					border-radius 3px
					color white
					margin 0 1em 0 0 
					padding 2px 5px 
					text-decoration none
				.estrellita
					text-decoration none
					&:after
						font-family "iconitos"
						color #ffc300
						content "\e9d9"
						
			
			.votos
				float left
				
				// para hacer herencia en stylus hay que
				// poner las etiquetas, clases o id una debajo de otra
				// y la regla comun al final
				.down 
				.up
					text-decoration none
				.down
					color red
					&:before // esto hay que hacerlo ara poner los iconos 
						//que queremos de nuestra fuente, el codigo del icono 
						// que hay que poner en content se obtiene del style.clases
						// que viene en cuando nos bajamos nuestra fuente
						font-family "iconitos"
						font-size 1em
						content "\ea43"
						vetical-align bottom
				.up 
					color green
					&:before
						font-family "iconitos"
						font-size 1em
						content	"\ea41"
						vetical-align bottom
		.description
			color gris_texto
			
			.detalles
				height 160px
				margin-left 130px //para separarlo de la imagen 
				// hay ke sumar el tama√±o de la imagen mas lo que 
				// queramos que se separe
				
				.autor
					margin 0.5em 0 2em 0
				
				.fecha 
					float right
					margin 0 1em 0 0 
				
				.tag 
					background azul
					border-radius 0.5em
					color white
					padding 0.2em 0.5em
					text-decoration none
					
				
				.titulo
					color gris_oscuro
					font-size 18px
					font-style italic
					margin 0
					padding 0.5em 0.5em 0 0
				
			.imagen
				float left
				margin:0
				vetical-align top // esto es para que la imagen se alinie arriba
				img 
					width 120px
					height 160px

.left
	float left
.right
	float right

@media screen and (min-width: 768px) 
/* si el medio es una pantalla y el minimo ancho es de 768px vamos hacer cambios*/
	header
		.titular
			.publicar
				position relative
				padding-left 2.5em
				&:before
					left 0px 
					top -10px
					font-size 2.5em
					position absolute
	.posts
		.post
			display inline-block 
			width 46%
			vertical-align top
			&:nth-child(odd)//solamente los elementos impares tienen este estilo 
							//(tb se puede hacer con los pares ponendo en vez de odd even)
				margin-right 2%
				background azul
			